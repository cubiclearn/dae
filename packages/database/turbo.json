{
    "extends": [
        "//"
    ],
    "pipeline": {
        "build": {
            "outputs": [
                "dist/**/*"
            ],
            "dependsOn": [
                "^build",
                "generate"
            ]
        },
        "deploy": {
            "outputs": [
                "dist/**/*"
            ],
            "dependsOn": [
                "^build",
                "generate",
                "db:migrate:deploy"
            ]
        },
        "db:format": {},
        "generate": {
            "cache": false
        },
        "check": {
            "dependsOn": [
                "generate"
            ],
            "cache": false
        },
        "db:studio": {},
        "db:migrate:dev": {
            "dependsOn": [
                "generate"
            ]
        },
        "db:migrate:deploy": {
            "dependsOn": [
                "generate"
            ]
        },
        "db:migrate:reset": {}
    }
}