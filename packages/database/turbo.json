{
    "extends": [
        "//"
    ],
    "pipeline": {
        "build": {
            "outputs": [
                "dist/**/*"
            ],
            "dependsOn": [
                "^build",
                "generate"
            ],
            "env": [
                "DATABASE_URL",
                "SHADOW_DATABASE_URL",
                "DIRECT_DATABASE_URL"
            ],
            "cache": true
        },
        "dev": {
            "dependsOn": [
                "^build",
                "generate"
            ]
        },
        "init": {
            "outputs": [
                "prisma/**/*"
            ],
            "cache": false
        },
        "pull": {
            "outputs": [
                "prisma/**/*"
            ],
            "dependsOn": [
                "init"
            ],
            "cache": false,
            "env": [
                "DATABASE_URL"
            ]
        },
        "push": {
            "dependsOn": [
                "generate"
            ],
            "cache": false
        },
        "generate": {
            "dependsOn": [],
            "cache": false
        },
        "check": {
            "dependsOn": [
                "generate"
            ],
            "cache": false
        },
        "db:studio": {},
        "db:migrate:dev": {
            "dependsOn": [
                "generate"
            ]
        },
        "db:migrate:deploy": {
            "dependsOn": [
                "generate"
            ]
        },
        "release": {
            "dependsOn": [
                "build",
                "db:migrate:deploy"
            ]
        }
    }
}