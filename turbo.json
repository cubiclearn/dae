{
    "$schema": "https://turbo.build/schema.json",
    "globalDotEnv": [
        ".env.local",
        ".env"
    ],
    "globalDependencies": [],
    "pipeline": {
        "generate": {
            "cache": false
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**/*"
            ],
            "cache": true
        },
        "check": {
            "dependsOn": [
                "build"
            ],
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "lint": {},
        "dev": {
            "dependsOn": [
                "^build",
                "generate"
            ],
            "cache": false,
            "persistent": true
        },
        "release": {
            "dependsOn": [
                "build"
            ]
        }
    }
}